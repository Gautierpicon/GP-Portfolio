---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout>
  <div style={{
    display: "flex",
    flexDirection: "column",
    alignItems: "center",
    maxWidth: "800px",
    margin: "0 auto",
    padding: "20px",
    textAlign: "center"
  }}>
    <img src={frontmatter.image.url} width="200"/>
    <slot />
  </div>

  <style is:global>
    .markdown-content img {
      max-width: 100px;
      height: auto;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
  </style>
</Layout>
